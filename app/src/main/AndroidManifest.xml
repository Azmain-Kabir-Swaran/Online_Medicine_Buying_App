        android:theme="@style/AppTheme">
        <activity android:name="com.example.myapp.onlinemedicine.controller.CategorySpecActivity"></activity>
        <activity android:name="com.example.myapp.onlinemedicine.controller.SearchProductActivity" />
        <activity android:name="com.example.myapp.onlinemedicine.controller.AdminHomeActivity" />
